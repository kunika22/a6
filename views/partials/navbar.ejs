<div class="navbar bg-base-100">
  <div class="flex-1 justify-content-center">
      <a href="/" class="btn btn-ghost hover:text-gray-400 normal-case text-xl">Lego Collection</a>
  </div>
  <div class="flex-none text-base-inverse">
      <ul class="menu menu-horizontal px-1">
          <li><a class="btn hover:text-gray-400 <%= (page == "/lego/sets") ? 'active' : '' %>" href="/lego/sets">View Collection</a></li>
          <% if (session.user) { %>
            <li><a class="btn hover:text-gray-400 <%= (page == "/lego/addSet") ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
          <% } %>
          <li><a class="btn hover:text-gray-400 <%= (page == "/about") ? 'active' : '' %>" href="/about">About</a></li>
          
          <% if (session.user) { %> 
          <li>
              <details>
                  <summary class="btn hover:text-gray-400">Account: <%= session.user.userName %></summary>
                  <ul class="p-2 right-0">
                      <li><a class="<%= (page == "/lego/addSet") ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
                      <li><a class="<%= (page == "/userHistory") ? 'active' : '' %>" href="/userHistory">User History</a></li>
                      <li><a href="/logout">Log Out</a></li>
                  </ul>
              </details>
          </li>
          <% } else { %> 
          <li>
              <details>
                  <summary class="btn hover:text-gray-400">Account</summary>
                  <ul class="p-2 right-0">
                      <li><a class="<%= (page == "/login") ? 'active' : '' %>" href="/login">Login</a></li>
                      <li><a class="<%= (page == "/register") ? 'active' : '' %>" href="/register">Register</a></li>
                  </ul>
              </details>
          </li>
          <% } %> 
      </ul>
  </div>
</div>
